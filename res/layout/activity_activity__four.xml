<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="right"
    android:background="#000"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome!" />
    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TableRow
            android:layout_height="5dp"
            android:background="#c3c3c3" >
            
            <TextView
                android:layout_height="5dp"
            	android:background="#c3c3c3" />
        
        </TableRow>
        
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <TextView 
                android:id="@+id/cooking_mama"
                android:text="Cooking Mama"
                android:gravity="center"
                android:background="#0f0"
                android:onClick="onClick_cooking" />

            <TextView
                android:id="@+id/price1"
                android:layout_width="fill_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:minWidth="200dp"
                android:text="5$" />
        
        </TableRow>

        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/angry_birds"
                android:background="#f00"
                android:gravity="center"
                android:text="Angry Birds"
                android:onClick="onClick_angry" />

            <TextView
                android:id="@+id/price2"
                android:layout_gravity="right"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:minWidth="200dp"
                android:text="10$" />
        </TableRow>
		
		<TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
		    
		    <TextView
                android:id="@+id/plants"
                android:text="Plants vs. Zombies"
                android:gravity="center"
                android:background="#00f"
                android:onClick="onClick_plants" />
		    
		    <TextView
                android:id="@+id/price3"
                android:text="15$"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:minWidth="200dp" />
		
		</TableRow>
		
		<TableRow
            android:layout_height="5dp"
            android:background="#c3c3c3">
            
            <TextView
                android:layout_height="5dp"
            	android:background="#c3c3c3" />
        
        </TableRow>
    
    </TableLayout>
    
	<TextView
	    android:id="@+id/message"
	    android:text="Message"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
	
	<TextView
	    android:id="@+id/description"
	    android:text="Game Description"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
	
	<Button
	    android:id="@+id/play"
	    android:text="Let's Play"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />"

</LinearLayout>