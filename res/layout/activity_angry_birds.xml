<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/angry1"
        android:src="@drawable/angry1"
        android:layout_width="fill_parent"
        android:layout_height="200dp" />
    
    <ImageView
        android:id="@+id/angry2"
        android:layout_below="@+id/angry1"
        android:src="@drawable/angry2"
        android:layout_width="fill_parent"
        android:layout_height="200dp" />
    
    <TextView
        android:id="@+id/angry_activity_desc"
	    android:text="Angry Birds Description"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center"
	    android:layout_below="@+id/angry2"
	    android:layout_marginTop="10dp" />
    
    <Button
	    android:id="@+id/angry_back"
	    android:layout_below="@+id/angry_activity_desc"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="10dp"
	    android:text="Back" />

</RelativeLayout>
